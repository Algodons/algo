# Development Environment Configuration
# This file is for development and local testing

# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000
NEXT_PUBLIC_BACKEND_URL=http://localhost:4000

# API Configuration - Dev Endpoints
API_URL=http://localhost:4000
WEBSOCKET_URL=ws://localhost:4000

# Copilot SaaS API Configuration
# Dev API endpoints for Copilot testing
COPILOT_API_URL=https://api-dev.copilot.example.com
COPILOT_API_KEY=dev_test_key_replace_with_actual
COPILOT_WORKSPACE_ID=dev_workspace
COPILOT_ENABLED=true

# AI/ML Service Configuration (Dev)
AI_SERVICE_URL=http://localhost:4000/api/v1/ai
AI_SERVICE_ENABLED=true
ML_MODEL_ENDPOINT=http://localhost:4000/api/v1/ai/models

# Database Configuration (Local Development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=algo_ide_dev
DB_USER=algo_user
DB_PASSWORD=dev_password

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=algo_ide_dev
POSTGRES_USER=algo_user
POSTGRES_PASSWORD=dev_password

# Redis Configuration (Local)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MongoDB Configuration (Local)
MONGODB_URI=mongodb://localhost:27017/algo_logs_dev

# Workspace Configuration
WORKSPACE_DIR=./workspaces

# Authentication (Development keys - DO NOT use in production)
JWT_SECRET=dev-secret-key-at-least-32-characters-long-for-testing
JWT_EXPIRATION=7d
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-nextauth-secret-key-change-in-production
ENCRYPTION_SECRET=dev-encryption-key-at-least-32-chars

# S3 Storage Configuration (Local MinIO)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=algo-projects-dev
S3_REGION=us-east-1

# Container Configuration
DOCKER_HOST=unix:///var/run/docker.sock
GIT_BASE_PATH=./data/git-repos
CONTAINER_MEMORY_LIMIT=512m
CONTAINER_CPU_LIMIT=0.5
CONTAINER_NETWORK=algo-network

# Rate Limiting (Relaxed for dev)
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=1000

# Feature Flags (All enabled for dev testing)
ENABLE_COLLABORATION=true
ENABLE_GIT_INTEGRATION=true
ENABLE_CUSTOM_DOMAINS=true
ENABLE_MONITORING=true
ENABLE_DEBUG_LOGGING=true

# Monitoring (Dev)
METRICS_PORT=9090

# Development Flags
DEBUG=true
VERBOSE_LOGGING=true
HOT_RELOAD=true
AUTO_RESTART=true

# Stripe (Test mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_test_webhook_secret

# PayPal (Sandbox)
PAYPAL_CLIENT_ID=your_paypal_sandbox_client_id
PAYPAL_SECRET=your_paypal_sandbox_secret
PAYPAL_MODE=sandbox

# Email Configuration (Dev - Mail catcher recommended)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=dev@algo-ide.local

# Usage Tracking (Dev)
USAGE_TRACKING_ENABLED=true
USAGE_BILLING_DAY=1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev
